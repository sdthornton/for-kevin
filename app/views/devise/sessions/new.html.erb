<% meta title: "Login | Cut the Chi | Theta Chi at University of Arizona" %>

<section class="sign-in">
  <div class="container">
    <div class="sign-in__inner-wrapper">
      <h1 class="heading heading--small"><%= "Admin " if resource_name.to_s == "admin" %>Login</h1>

      <%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
        <% if flash[:alert] %>
          <div class="alert-error alert">
            <%= flash[:alert] %>
          </div>
        <% end %>

        <div class="form-inputs">
          <%= f.input :email, :required => false, :autofocus => true,
              input_html: { class: "text-input" }, label: false,
              placeholder: "Email" %>
          <%= f.input :password, :required => false,
              input_html: { class: "text-input" }, label: false,
              placeholder: "Password" %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Login", class: "button" %>
        </div>

        <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>