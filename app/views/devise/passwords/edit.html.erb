<section class="forgotten-password">
  <div class="container">
    <div class="forgotten-password__inner-wrapper">
      <h1 class="heading">Change your password</h1>

      <%= simple_form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :put }) do |f| %>
        <%= f.error_notification %>

        <%= f.input :reset_password_token, :as => :hidden %>
        <%= f.full_error :reset_password_token %>

        <div class="form-inputs">
          <%= f.input :password, label: false, required: true, autofocus: true,
                      placeholder: "New Password",
                      input_html: { class: "text-input", required: true } %>
          <%= f.input :password_confirmation, label: false, required: true,
                      placeholder: "Confirm Password",
                      input_html: { class: "text-input", required: true } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "Change my password", class: "button" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</section>
