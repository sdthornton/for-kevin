<h1>Haircuts#index</h1>
<p>Find me in app/views/haircuts/index.html.erb</p>

<p>
  <form action="<%= haircuts_path %>" method="get" id="search_haircuts">
    <%= text_field_tag :search, params[:search], placeholder: "Search Members by Name" %>
    <%= submit_tag "Search", id: "haircut_search_submit", name: nil %>
  </form>
</p>

<div class="outer">
  <div class="wrap">
    <% if @haircuts.empty? %>
      <p>Sorry, no results found</p>
    <% end %>

    <% if @search %>
      <p><%= link_to "Show All", haircuts_path %></p>
    <% end %>

    <%= render @haircuts unless @haircuts.empty? %>
    <%= paginate @haircuts %>
  </div>
</div>

<%= content_for :javascript do %>
  <%= javascript_tag 'new CutTheChi.Haircut()' %>
<% end %>
